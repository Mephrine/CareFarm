<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="view"
            type="kr.smart.carefarm.scene.sidemenu.crop.WorkCycleFragment"/>
        <variable
            name="viewModel"
            type="kr.smart.carefarm.scene.sidemenu.crop.WorkCycleViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_farm_bg"
            android:layout_marginBottom="35dp"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:id="@+id/ll_work_cycle"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintVertical_chainStyle="spread_inside"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/list_work_cycle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_farm_name"
                        style="@style/TextViewStyle_Medium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_planting_btn"
                        android:background="@color/font_work_cycle_title"
                        android:text="@string/reg_farming_work_name"
                        android:textSize="24dp"
                        android:gravity="center"
                        android:layout_weight="0.35"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent" />
                    <TextView
                        style="@style/TextViewStyle_Medium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_planting_btn"
                        android:background="@color/font_work_cycle_title"
                        android:text="@string/reg_farming_work_period"
                        android:textSize="24dp"
                        android:gravity="center"
                        android:layout_weight="0.65"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_line_bg" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_work_cycle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/color_farm_bg"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:scrollbars="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_work_cycle"
                tools:listitem="@layout/item_work_cycle" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_sheet_work_cycle"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:background="@color/color_work_cycle_bottom_bg"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:layout_marginBottom="35dp"
            android:layout_alignParentBottom="true"
            android:animateLayoutChanges="true"
            android:visibility="gone"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:listitem="@layout/item_work_cycle" >
            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line_bg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/ll_btn_arrow"/>
            <LinearLayout
                android:id="@+id/ll_btn_arrow"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:onClick="@{view::onClick}"
                app:layout_constraintTop_toBottomOf="@id/line1"
                app:layout_constraintBottom_toTopOf="@id/ll_work_nm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_drop_input"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_work_nm"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/ll_btn_arrow"
                app:layout_constraintBottom_toTopOf="@id/ll_work_period"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    style="@style/TextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/font_planting"
                    android:text="@string/reg_farming_work_name"
                    android:textSize="13dp"
                    android:gravity="center_vertical|right"
                    android:paddingRight="20dp"
                    android:layout_weight="350"/>
                <EditText
                    style="@style/EditTextStyle_Medium"
                    android:id="@+id/et_work_nm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/font_content"
                    android:background="@drawable/item_work_bg"
                    android:textSize="12dp"
                    android:gravity="left|center_vertical"
                    android:ems="10"
                    android:selectAllOnFocus="false"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:lines="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:layout_weight="1190"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_work_period"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/ll_work_nm"
                app:layout_constraintBottom_toTopOf="@id/ll_work_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="1dp">
                <TextView
                    style="@style/TextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/font_planting"
                    android:text="@string/reg_farming_work_period"
                    android:textSize="13dp"
                    android:gravity="center_vertical|right"
                    android:paddingRight="20dp"
                    android:layout_weight="350"/>
                <EditText
                    style="@style/EditTextStyle_Medium"
                    android:id="@+id/et_work_period"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/font_content"
                    android:background="@drawable/item_work_bg"
                    android:textSize="12dp"
                    android:gravity="left|center_vertical"
                    android:ems="10"
                    android:selectAllOnFocus="false"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:lines="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:layout_weight="1190"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_work_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/ll_work_period"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="1dp">
                <TextView
                    style="@style/TextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/font_planting"
                    android:text="@string/reg_farming_work_content"
                    android:textSize="13dp"
                    android:gravity="top|right"
                    android:paddingRight="20dp"
                    android:layout_weight="350"/>
                <EditText
                    style="@style/EditTextStyle_Medium"
                    android:id="@+id/et_work_content"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/font_content"
                    android:background="@drawable/item_work_bg"
                    android:textSize="12dp"
                    android:ems="10"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:selectAllOnFocus="false"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:lineSpacingExtra="6dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1190"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:gravity="center"
            style="@style/TextViewStyle_Medium"
            android:id="@+id/btn_reg_crop"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/color_planting_btn_cctv"
            android:text="@string/reg_farming_add"
            android:textSize="15dp"
            android:onClick="@{view::onClick}"
            android:textColor="@color/font_planting_btn"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</layout>

